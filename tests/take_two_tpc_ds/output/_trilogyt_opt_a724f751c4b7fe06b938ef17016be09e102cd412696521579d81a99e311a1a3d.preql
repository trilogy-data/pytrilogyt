const _trilogyt._created_at <- current_datetime();

import store_sales as store_sales;

WHERE
    store_sales.item.category in ('Sports', 'Books', 'Home') and (store_sales.date.date >= '1999-02-22'::date and store_sales.date.date <= '1999-03-24'::date)
SELECT
    store_sales.item.name,
    store_sales.item.desc,
    store_sales.item.category,
    store_sales.item.class,
    store_sales.item.current_price,
    sum(store_sales.ext_sales_price) -> item_revenue,
    sum(store_sales.ext_sales_price) * 100.0 / (sum(store_sales.ext_sales_price) by store_sales.item.class) -> revenueratio,
ORDER BY
    store_sales.item.category asc nulls first,
    store_sales.item.class asc nulls first,
    store_sales.item.name asc nulls first,
    store_sales.item.desc asc nulls first,
    revenueratio asc nulls first
;